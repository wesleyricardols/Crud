@model Crud.Web.Models.CrudModel
@using Crud.Common.Request

@{
    ViewBag.Title = "Listagem";
}

<div class="row">
    <div class="col-md-12 mb-3">
        @Html.ActionLink(" Cadastrar", "Create", null, new { @class = "btn btn-primary fa fa-plus-circle float-right" })
    </div>
</div>

<h2>Listagem</h2>

<div class="alert alert-warning" role="alert" style="display: none;">
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Nome Completo</th>
            <th scope="col">E-mail</th>
            <th scope="col">Telefone</th>
            <th scope="col">Ação</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Cruds != null && Model.Cruds.Any())
        {
            foreach (CrudRequest item in Model.Cruds)
            {
                <tr>
                    <td>@item.FullName</td>
                    <td>@item.EmailAddress</td>
                    <td>@item.PhoneNumber</td>
                    <td>
                        @Html.ActionLink(" ", "Details", new { Id = item.Id }, new { @class = "btn btn-dark btn-sm fa fa-search", @title = "Visualizar" })
                        @Html.ActionLink(" ", "Edit", new { Id = item.Id }, new { @class = "btn btn-primary btn-sm fa fa-edit", @title = "Editar" })
                        @Html.ActionLink(" ", "Delete", new { Id = item.Id }, new { @class = "btn btn-danger btn-sm fa fa-trash-o", @title = "Excluir" })
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td align="center" colspan="4">Nenhum registro encontrado!</td>
            </tr>
        }
    </tbody>
</table>